<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:layout_margin="0dp"
    android:splitMotionEvents="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ago.heart2.MainActivity"
    tools:showIn="@layout/activity_main" android:id="@+id/_root" android:layout_centerInParent="false" >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/_imgGrid" android:padding="0px" android:layout_margin="0px"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="setx" android:layout_marginTop="400dp" android:layout_marginLeft="30dp"/>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value" android:layout_marginTop="420dp" android:layout_marginLeft="30dp" android:id="@+id/txtSetX"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sety" android:layout_marginTop="400dp" android:layout_marginLeft="80dp"/>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value" android:layout_marginTop="420dp" android:layout_marginLeft="80dp" android:id="@+id/txtSetY"/>



    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="movingx" android:layout_marginTop="400dp" android:layout_marginLeft="170dp"/>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value" android:layout_marginTop="420dp" android:layout_marginLeft="170dp" android:id="@+id/txtMoveX"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="movingy" android:layout_marginTop="400dp" android:layout_marginLeft="240dp"/>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value" android:layout_marginTop="420dp" android:layout_marginLeft="240dp" android:id="@+id/txtMoveY"/>

</RelativeLayout>
